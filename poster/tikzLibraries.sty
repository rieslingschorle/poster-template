\newcommand{\TikzInnerSep}{0.33mm}

\def\centerarc[#1](#2)(#3:#4:#5){%
    \draw [#1] ($(#2)+({#5*cos(#3)}, {#5*sin(#3)})$) arc (#3:#4:#5)%
}

\tikzset{
	>=latex,
	level/.style={very thick},
	trans/.style={thick,<->,shorten >=1pt, shorten <=1pt},
	light/.style={thick,->,style={decorate, decoration={snake,post length=2mm}}},
	decay/.style={thick,->,shorten >=1pt,decorate, decoration={snake,post length=2mm}},
	cable/.style={gray!80,line width=0.4mm,postaction={decorate,decoration={markings
	,mark=at position 0 with {\fill[black] (0,0.05) rectangle (0.2,-0.05);}
    ,mark=at position 0.9999 with {\fill[black] (0,0.05) rectangle (-0.2,-0.05);}
    %,mark=at position 0.75 with {\arrow{>}}
    }}},
    depl/.style={#1,fill=#1!20,fill opacity=.6},
    depl/.default=red,
}

\tikzset{xcenter around/.style 2 args={execute at end picture={%
  \useasboundingbox let \p0 = (current bounding box.south west), \p1 = (current bounding box.north east),
                        \p2 = (#1), \p3 = (#2)
                    in
        ({min(\x2 + \x3 - \x1,\x0)},\y0) rectangle ({max(\x3 + \x2 - \x0,\x1)},\y1);
}}}

